<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LogInActivity">

    <ImageView
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/next"
        android:layout_marginBottom="15dp"
        android:layout_gravity="start"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_marginBottom="22dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:text="Вхід"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#323232"
        android:textSize="24dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Введіть ваші дані, щоб увійти в профіль"
        style="@style/textView2"
        android:layout_marginLeft="25dp"
        />

    <!-- Layout для елементу EditText мобільного телефону -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginBottom="22dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="340dp"
            android:layout_height="16.7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="Номер телефону"
            android:gravity="center_vertical"
            android:layout_marginBottom="1dp"
            style="@style/textViewTitle"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ImageView з фоновим зображенням -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_1" />

            <!-- LinearLayout для групування ImageView з відступами -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:orientation="horizontal"
                android:layout_marginStart="18dp">

                <ImageView
                    android:id="@+id/group_36691"
                    android:layout_width="17dp"
                    android:layout_height="14.32dp"
                    android:background="@drawable/flag" />

            </LinearLayout>

            <!-- EditText для введення мобільного телефону -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UA + 380"
                android:layout_marginStart="44dp"
                android:layout_gravity="center_vertical"
                style="@style/input"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:hint=" -- --- -- --"
                android:maxLength="9"
                android:inputType="number"
                android:textColorHint="#D8D8D8"
                android:textColor="#D8D8D8"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="120dp"
                style="@style/input"/>

        </FrameLayout>
    </LinearLayout>

    <!-- Layout для елементу EditText паролю -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginBottom="9.27dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="340dp"
            android:layout_height="16.7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="Пароль"
            android:gravity="center_vertical"
            android:layout_marginBottom="1dp"
            style="@style/textViewTitle"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ImageView з фоновим зображенням -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_1" />

            <!-- EditText для введення паролю -->
            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="310dp"
                android:layout_height="48dp"
                android:hint="Введіть пароль"
                android:textColorHint="#D8D8D8"
                android:textColor="#D8D8D8"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:inputType="textPassword"
                android:password="true"
                android:layout_marginStart="20dp"
                style="@style/input"/>

            <!-- LinearLayout для групування ImageView з відступами -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:orientation="horizontal"
                android:layout_marginEnd="20dp">

                <ImageView
                    android:id="@+id/password_see"
                    android:layout_width="17dp"
                    android:layout_height="14.32dp"
                    android:background="@drawable/eye" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_gravity="end"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="18dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Забули пароль? "
            style="@style/textView8"
            />

        <TextView
            android:id="@+id/buttonResetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Відновити"
            style="@style/textViewLogIn"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_2" />

        <TextView
            android:id="@+id/buttonLogIn"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="Увійти в акаунт"
            android:textAppearance="@style/button"
            android:gravity="center_horizontal|center_vertical"
            />
    </FrameLayout>

    <TextView
        android:layout_width="340dp"
        android:layout_height="1.8dp"
        android:background="@drawable/gradient_background"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="9dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="або"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="11dp"
        style="@style/textView2"
        />

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_3" />
        
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:background="@drawable/google_icon"
                android:layout_gravity="start|center_vertical"/>

            <TextView
                android:id="@+id/buttonGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:text="Увійти за допомогою Google"
                android:textAppearance="@style/buttonSocialNetwork"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="23dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_3" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:background="@drawable/facebook_icon"
                android:layout_gravity="start|center_vertical"/>

            <TextView
                android:id="@+id/buttonFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:text="Увійти через Facebook"
                android:textAppearance="@style/buttonSocialNetwork"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:layout_width="340dp"
        android:layout_height="1.8dp"
        android:background="@drawable/gradient_background"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="15dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ще немає акаунту? "
            style="@style/textView8"
            />

        <TextView
            android:id="@+id/buttonSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Зареєструватися"
            style="@style/textViewLogIn"
            />
    </LinearLayout>

    </LinearLayout>