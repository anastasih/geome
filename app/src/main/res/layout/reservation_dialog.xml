<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/cross"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="end"
        android:clickable="true"
        android:focusable="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:text="Оплата пройшла успішно!"
        android:textColor="#323232"
        android:textSize="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Ви обрали номер"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/name_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="-20dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Покращений люкс"
        android:textSize="15dp" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="330dp"
            android:layout_height="33dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Дати проживання"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/data1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="пн, 18 вересня"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/data2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="сб, 23 вересня"
            android:textColor="#000000" />



        <ImageView
            android:id="@+id/vector2"
            android:layout_width="14dp"
            android:layout_height="12dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/vector"></ImageView>

        <ImageView
            android:id="@+id/vector3"
            android:layout_width="14dp"
            android:layout_height="12dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/vector"></ImageView>

        <TextView
            android:layout_width="330dp"
            android:layout_height="33dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Кількість гостей"
            android:textSize="15dp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="33dp"
            android:layout_marginLeft="177dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Кількість гостей"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/adults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="2 дорослих"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/children"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="125dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="2 дітей"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="177dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="1 номер"
            android:textColor="#000000" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        tools:ignore="MissingConstraints">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Проживання"
        android:textColor="#000000"
        android:textSize="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Додаткові послуги"
        android:textColor="#000000"
        android:textSize="12dp"/>
    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Можливість перенесення бронювання"
        android:textColor="#000000"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/value"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="4750 ₴"
        android:textColor="#000000"
        android:textSize="12dp"
        android:gravity="end"/>
    <TextView
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="0 ₴"
        android:textColor="#000000"
        android:textSize="12dp"
        android:gravity="end"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/montserrat_bold"
        android:background="@drawable/free"
        android:textColor="#000000"
        android:gravity="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Усього"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/TotalValue"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="157dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="4750 ₴"
        android:textColor="#000000"
        android:textSize="15dp"
        android:gravity="end"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_2" />

        <TextView
            android:id="@+id/buttonService_history"
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="Переглянути заплановані бронювання"
            android:textAppearance="@style/button" />
    </FrameLayout>
</LinearLayout>